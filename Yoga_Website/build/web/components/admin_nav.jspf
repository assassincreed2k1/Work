<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<nav class="admin-nav">
    <div class="container">
        <div class="nav-header" style="display: flex; align-items: center; justify-content: space-between;">
            <span style="font-weight: bold; color: #667eea; font-size: 1.2rem;">⚙️ Admin Panel</span>
            <button class="nav-toggle" aria-label="Mở menu" onclick="toggleAdminNav()" style="background: none; border: none; font-size: 2rem; cursor: pointer; display: none;">
                &#9776;
            </button>
        </div>
        <ul class="nav-list" style="display: flex; flex-wrap: wrap; gap: 10px; list-style: none; padding: 0; margin: 0;">
            <li><a href="dashboard.jsp" class="btn">📊 Dashboard</a></li>
            <li><a href="register.jsp" class="btn">📝 Quản lý Đơn đăng ký</a></li>
            <li><a href="teacher.jsp" class="btn">👨‍🏫 Quản lý Giáo viên</a></li>
            <li><a href="class.jsp" class="btn">🏃‍♀️ Quản lý Lớp học</a></li>
            <li style="margin-left:auto;"><a href="../login.jsp" class="btn btn-danger">🚪 Đăng xuất</a></li>
        </ul>
    </div>
</nav>
<script>
function toggleAdminNav() {
    var navList = document.querySelector('.admin-nav .nav-list');
    navList.style.display = (navList.style.display === 'flex' || navList.style.display === '') ? 'block' : 'flex';
}
function handleAdminNavResize() {
    var navToggle = document.querySelector('.admin-nav .nav-toggle');
    var navList = document.querySelector('.admin-nav .nav-list');
    if(window.innerWidth <= 768) {
        navToggle.style.display = 'block';
        navList.style.display = 'none';
    } else {
        navToggle.style.display = 'none';
        navList.style.display = 'flex';
    }
}
window.addEventListener('resize', handleAdminNavResize);
document.addEventListener('DOMContentLoaded', handleAdminNavResize);
</script>
<style>
.admin-nav .container {
    padding: 0 10px;
    position: relative;
}
.admin-nav .nav-list {
    transition: all 0.3s;
}
@media (max-width: 768px) {
    .admin-nav .nav-list {
        flex-direction: column;
        gap: 0;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        border-radius: 10px;
        position: absolute;
        top: 55px;
        left: 10px;
        right: 10px;
        z-index: 100;
        padding: 10px 0;
    }
    .admin-nav .nav-list li {
        margin: 10px 0;
    }
    .admin-nav .nav-toggle {
        display: block !important;
    }
}
</style>
